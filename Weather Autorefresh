LONDON:
import requests
import time

API_KEY = '87019af5905946febe6232728230311'
BASE_URL = 'https://api.weatherapi.com/v1/current.json'

def get_weather(city_name):
    params = {'key': API_KEY, 'q': city_name}
    response = requests.get(BASE_URL, params=params)

    if response.status_code == 200:
        data = response.json()
        temperature = data['current']['temp_c']
        description = data['current']['condition']['text']
        print(f"City: {city_name}")
        print(f"Temperature: {temperature}°C")
        print(f"Description: {description}")
    else:
        print("Error fetching weather data")

def continuous_weather_update(city_name, refresh_interval):
    while True:
        get_weather(city_name)
        time.sleep(refresh_interval)

#autorefresh_setting
city = "London"
refresh_time = 15 #time refresh in 15 seconds

#autorefresh
continuous_weather_update(city, refresh_time)


